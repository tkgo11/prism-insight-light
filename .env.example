# .env.example

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHANNEL_ID=your_main_channel_id_here

# Optional: Additional language channels
# TELEGRAM_CHANNEL_ID_EN=english_channel_id_here
# TELEGRAM_CHANNEL_ID_JA=japanese_channel_id_here
# TELEGRAM_CHANNEL_ID_ZH=chinese_channel_id_here

# GCP Pub/Sub
# Google Cloud Pub/Sub configuration
# Buy/sell signals will be published via GCP Pub/Sub.
GCP_PROJECT_ID=your-project-id
GCP_PUBSUB_TOPIC_ID=prism-trading-signals
GCP_PUBSUB_SUBSCRIPTION_ID=prism-trading-signals-sub
GCP_CREDENTIALS_PATH=/path/to/service-account-key.json
